                    <form method="post" asp-controller="Home" asp-action="Registration">
                    <div class="registration">
                            @if (ViewBag.status==1)
                            {
                                <div class="alert alert-danger">Fire</div>
                            }
                            <label>First name</label>
                        <br>
                            @Html.TextBoxFor(m=>m.FirstName,new {@class="form-control" ,@id="Firstname", @placeholder = "Enter Your First Name"})
                        @*<input class="form-control" type="text">*@
                        <br>

                        <label>Last name</label>
                        <br>
                            @Html.TextBoxFor(m=>m.LastName,new {@class="form-control" ,@id="Lastname",  @placeholder = "Enter Your Last Name"})
                        @*<input class="form-control" type="text">*@
                        <br>

                        <label>Phone Number</label>
                        <br>
                            @Html.TextBoxFor(m=>m.PhoneNumber,new {@class="form-control" ,@id="PhoneNumber",@placeholder = "Enter Your Phone Number" })
                       @* <input class="form-control" type="tel">*@
                        <br>

                        <label>Email Address</label>
                        <br>
                            @Html.TextBoxFor(m=>m.Email,new {@class="form-control" ,@id="Email", @placeholder = "Enter Your Email"})
                      @*  <input class="form-control" type="email">*@
                        <br>

                        <label>Password</label>
                        <br>
                            @Html.PasswordFor(m=>m.Password,new {@class="form-control" ,@id="Password", @placeholder = "Enter Your Password"})
                        @*<input class="form-control" type="password">*@
                        <br>

                        <label>Confirm Password</label>
                        <br>
